@model WebAppTp2.Models.Voiture

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Voiture</h4>
<hr />

    
     <form enctype="multipart/form-data" asp-action="Create">
        <div class="row">
           <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Marque" class="control-label">Selectionner une Marque</label>
                <select asp-for="MarqueId" class ="form-control" asp-items="ViewBag.MarqueId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div> 
         
           
            <div class="form-group">
                <label asp-for="Chassis" class="control-label"></label>
                <input asp-for="Chassis" class="form-control" />
                <span asp-validation-for="Chassis" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <label asp-for="Finition" class="control-label"></label>
                <input asp-for="Finition" class="form-control" />
                <span asp-validation-for="Finition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NbPortes" class="control-label"></label>
                <input asp-for="NbPortes" class="form-control" />
                <span asp-validation-for="NbPortes" class="text-danger"></span>
           
            </div>

            <div class="form-group">
                <label asp-for="Moteur" class="control-label"></label>
                <input asp-for="Moteur" class="form-control" />
                <span asp-validation-for="Moteur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChevauxDin" class="control-label"></label>
                <input asp-for="ChevauxDin" class="form-control" />
                <span asp-validation-for="ChevauxDin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Couleur" class="control-label"></label>
                <input asp-for="Couleur" class="form-control" />
                <span asp-validation-for="Couleur" class="text-danger"></span>
            </div>
            </div>
            
            
          <div class="col-md-8">
               <div class="form-group">
                <label asp-for="Photo" class="control-label">Ajouter une Voiture</label>
                <input asp-for="Photo" onchange="document.getElementById('photoVoitures').src = window.URL.createObjectURL(this.files[0])" type="file" class="form-control" />
                <img id="photoVoiture" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            </div>
           <div class="row form-group">
           <div class=" col-md-5">
           <div class=" col-md-1">
               <input type="submit" value="Create" class="btn btn-primary" />
           </div>
           </div>


            </div>
           
           

         </div>

        </form>
    


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
